<!-- app/views/users/new.html.erb -->
<%= stylesheet_link_tag params[:controller] %>
<% provide(:title, "Sign Up for Pantri") %>

<section id="logo-search-container" class="search">
  <header id="logo" onclick="window.location='/'"></header>

  <%= form_tag (root_url + "search"), method: :get, :enforce_utf8 => false, id: "search-form" do %>
    <%= text_field_tag :q, params[:q], placeholder: "Type ingredients...", id: "search_bar", :autocomplete => :off, autofocus: "autofocus" %>
    <%= submit_tag "", name: nil, id: "sButton" %>
  <% end %>
</section>

<section id="recipe-container">
  <h1 id="uname" style="height:1em;">Sign up for Pantri</h1>

  <%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages' %>

    <p style="width:20em;text-align:right;"><%= f.label :name, class: 'form' %> <%= f.text_field :name, class: 'form-control' %></p>

    <p style="width:20em;text-align:right;"><%= f.label :email, class: 'form' %> <%= f.email_field :email, class: 'form-control' %></p>

    <p style="width:20em;text-align:right;"><%= f.label :password , class: 'form'%> <%= f.password_field :password, class: 'form-control' %></p>

    <p style="width:20em;text-align:right;"><%= f.label :password_confirmation, "Confirm Password", class: 'form' %> <%= f.password_field :password_confirmation, class: 'form-control' %></p>

    <p style="width:100%;text-align:center;"><%= f.submit "Create Account", :class => "btn" %></p>

  <% end %>
</section>
